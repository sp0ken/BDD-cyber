{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<h1>Connexion</h1>
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}

<form class="no-autosave" action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label for="username">Nom</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

    <label for="password">Mot de passe</label>
    <input type="password" id="password" name="_password" required="required" />

    <input class="left" type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label class="left" for="remember_me">Se souvenir de moi</label>
    <div class="clear"></div><br>
    <input type="submit" id="_submit" name="_submit" value="Valider" />
    <a href="{{path('fos_user_resetting_request')}}">Mot de passe oubli√© ?</a> ou <a href="{{path('fos_user_registration_register')}}">Inscription</a>
</form>
{% endblock fos_user_content %}
