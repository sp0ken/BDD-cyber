{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Édition de {{event.name}}{% endblock %}

{% block body %}

<h1>Édition de l'évènement {{event.name}}</h1>

<form action="{{ path('event_update', {'id': event.id}) }}" method="post" {{ form_enctype(form) }}>
  <div class="row block">
    <h3 class="twelve columns">La base</h3>
    <div class="twelve columns">
      {{ form_row(form.name)}}
    </div>
    <div class="six mobile-two columns">
      {{ form_row(form.start_date)}}
    </div>
    <div class="six mobile-two columns">
      {{ form_row(form.end_date)}}
    </div>
  </div>

  <div class="spacer"></div>

  <div class="row block">
    <h3 class="twelve columns">Les détails</h3>
    <div class="twelve columns">
      {{ form_row(form.description)}}
    </div>
  </div>

  <div class="spacer"></div>

  <div class="row block">
    <h3 class="twelve columns">Les participants</h3>
    <div class="twelve columns">
      {{ form_row(form.players)}}
    </div>
     <div class="twelve columns">
      {{ form_row(form.groupes)}}
    </div>
     <div class="twelve columns">
      {{ form_row(form.intrigues)}}
    </div>
  </div>

  <div style="display:none">
    {{ form_rest(form) }}
  </div>
  <input class="button green" type="submit" value="Éditer"/>
</form>

{% endblock %}
