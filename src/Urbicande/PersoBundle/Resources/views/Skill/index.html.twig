{% extends '::base.html.twig' %}
{% block title %} {{ parent() }} - Compétences {% endblock %}

{% block body %}

<div class="row">
  <h1 class="ten mobile-three columns">
    Les compétences
  </h1>
  <div class="two mobile-one columns">
    <div class="button gray">
      <a href="{{ path('create_skill') }}">Créer une compétence</a>
    </div>
  </div>
</div>

<table class="records_list datatable">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th>Point(s) de création</th>
      <th>Nombre de personnage</th>
      <th>Nombre d'intrigues</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  {% for skill in skills %}
      <tr>
        <td><a href="{{ path('skill_by_id', { 'id': skill.id }) }}">{{ skill.name }}</a></td>
        <td>{% autoescape false %}{{ skill.description|slice(0, 60) }}[...]{% endautoescape %}</td>
        <td>{{ skill.creationPoint }}</td>
        <td>{{ skill.players|length }}</td>
        <td>{{ skill.intrigues|length }}</td>
        <td>
          <ul class="button-group even two-up">
            <li>
              <div class="button green">
                <a href="{{ path('skill_edit', { 'id': skill.id }) }}"><i class="icon-pencil"></i></a>
              </div>
            </li>
            <li>
              <div class="button red">
                <a title="Supprimer" href="{{ path('skill_delete', { 'id': skill.id }) }}"><i class="icon-remove-sign"></i></a>
              </div>
            </li>
          </ul>
        </td>
      </tr>
    </a>
  {% endfor %}
  </tbody>
</table>

{% endblock body %}
