{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Édition de {{skill.name}}{% endblock %}

{% block body %}

<h1>Édition de la compétence "{{skill.name}}" <small>(revenir à la version du : 
   <form id="revert" action="{{ path('skill_revert', { 'id': skill.id }) }}" method="post" {{ form_enctype(form) }}>
    <select name="version">
      {% for log in logs %}
          <option value="{{log.version}}">{{log.loggedAt.date|date("d/m/Y")}}</option>}
      {% endfor %}
    </select>
     <input class="button green" type="submit" name="revert" value="Appliquer">
     )
  </form>
</small></h1>

<form action="{{ path('skill_update', {'id': skill.id}) }}" method="post" {{ form_enctype(form) }}>
  <h3>La base</h3>
  <div class="row">
    <div class="four mobile-one columns">
      {{ form_row(form.writer) }}
    </div>
    <div class="four mobile-one columns">
      {{ form_row(form.name) }}
    </div>
    <div class="four mobile-one columns">
      {{ form_row(form.creation_point) }}
    </div>
  </div>
  
  <div class="row">
    <div class="twelve columns">
      {{ form_row(form.description) }}
    </div>
  </div>
  
  <h3>Les relations</h3>
  <div class="row">
    <div class="five mobile-two columns">
      {{ form_row(form.players) }}
    </div>

    <div class="five mobile-two columns">
      {{ form_row(form.intrigues) }}
    </div>
  </div>
  <br>
  {{ form_row(form._token) }}
  <input class="button green" type="submit" value="Éditer"/>
</form>

{% endblock %}
