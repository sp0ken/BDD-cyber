{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Création groupe{% endblock %}

{% block body %}

<h1>Créer une nouvelle compétence</h1>

<form action="{{ path('create_skill') }}" method="post" {{ form_enctype(form) }}>
	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">La base</h3>
				</div>
				<div class="row">
					<div class="small-4 columns">
						{{ form_row(form.writer) }}
					</div>
					<div class="small-4 columns">
						{{ form_row(form.name) }}
					</div>
					<div class="small-4 columns">
						{{ form_row(form.creation_point) }}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">Les détails</h3>
				</div>
				<div class="row">
					<div class="small-12 columns">
						{{ form_row(form.description) }}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">Les relations</h3>
				</div>
				<div class="row">
					<div class="small-12 medium-6 columns">
						{{ form_row(form.players) }}
					</div>

					<div class="small-12 medium-6 columns">
						{{ form_row(form.intrigues) }}
					</div>
				</div>
			</div>
		</div>
	</div>

	{{ form_row(form._token) }}
	<button class="button flat green" type="submit"><i class="fa fa-plus"></i> Créer</button>
</form>

{% endblock %}
