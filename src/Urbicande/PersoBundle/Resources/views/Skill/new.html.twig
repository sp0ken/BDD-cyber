{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Création groupe{% endblock %}

{% block body %}

<h1>Créer une nouvelle compétence</h1>

<form action="{{ path('create_skill') }}" method="post" {{ form_enctype(form) }}>
  <h3>La base</h3>
  <div class="row">
    <div class="four mobile-one columns">
      {{ form_row(form.writer) }}
    </div>
    <div class="four mobile-one columns">
      {{ form_row(form.name) }}
    </div>
    <div class="four mobile-one columns">
      {{ form_row(form.creation_point) }}
    </div>
  </div>
  
  <div class="row">
    <div class="twelve columns">
      {{ form_row(form.description) }}
    </div>
  </div>
  
  <h3>Les relations</h3>
  <div class="row">
    <div class="five mobile-two columns">
      {{ form_row(form.players) }}
    </div>

    <div class="five mobile-two columns">
      {{ form_row(form.intrigues) }}
    </div>
  </div>
  <br>
  {{ form_row(form._token) }}
  <input class="button green" type="submit" value="Créer"/>
</form>

{% endblock %}
