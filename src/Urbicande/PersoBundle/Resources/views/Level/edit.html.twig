{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Édition de {{level.name}} {% endblock %}

{% block body %}

<h1>Éditer le niveau "{{level.name}}" <small>(revenir à la version du : 
	 <form id="revert" action="{{ path('level_revert', { 'id': level.id }) }}" method="post" {{ form_enctype(form) }}>
		<select name="version">
			{% for log in logs %}
					<option value="{{log.version}}">{{log.loggedAt.date|date("d/m/Y H:i")}}</option>}
			{% endfor %}
		</select>
		 <input class="button flat green" type="submit" name="revert" value="Appliquer">
		 )
	</form>
</small></h1>

<form action="{{ path('level_update', { 'id': level.id }) }}" method="post" {{ form_enctype(form) }}>
	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">La base</h3>
				</div>
				<div class="row">
					<div class="small-12 medium-6 columns">
						{{ form_row(form.name)}}
					</div>
					<div class="small-12 medium-6 columns">
						{{ form_row(form.level)}}
					</div>
					<div class="small-12 columns">
						{{ form_row(form.description) }}
					</div>
				</div>
			</div>
		</div>
	</div>

	{{ form_row(form._token) }}
	<input class="button flat green" type="submit" value="Éditer"/>
</form>

{% endblock %}
