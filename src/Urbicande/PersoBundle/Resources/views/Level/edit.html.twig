{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Édition de {{level.name}} {% endblock %}

{% block body %}

<h1>Éditer le niveau "{{level.name}}" <small>(revenir à la version du : 
   <form id="revert" action="{{ path('level_revert', { 'id': level.id }) }}" method="post" {{ form_enctype(form) }}>
    <select name="version">
      {% for log in logs %}
          <option value="{{log.version}}">{{log.loggedAt.date|date("d/m/Y")}}</option>}
      {% endfor %}
    </select>
     <input class="button green" type="submit" name="revert" value="Appliquer">
     )
  </form>
</small></h1>

<form action="{{ path('level_update', { 'id': level.id }) }}" method="post" {{ form_enctype(form) }}>
  <div class="row block">
    <h3 class="twelve columns">La base</h3>
<div class="six mobile-two columns">
      {{ form_row(form.name)}}
    </div>
    <div class="six mobile-two columns">
      {{ form_row(form.level)}}
    </div>
    <div class="twelve columns">
      {{ form_row(form.description) }}
    </div>
  </div>

  {{ form_row(form._token) }}
  <input class="button green" type="submit" value="Éditer"/>
</form>

{% endblock %}
