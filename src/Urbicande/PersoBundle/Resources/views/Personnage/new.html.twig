{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Création de personnage{% endblock %}

{% block body %}

<h1>Créer un nouveau personnage</h1>

<form method="post" {{ form_enctype(form) }}>
  <div class="row block">
    <h3 class="twelve columns">La technique</h3>
    <div class="six mobile-two columns">
      {{ form_row(form.writer)}}
    </div>
    <div class="six mobile-two columns">
      {{ form_row(form.status) }}
    </div>
  </div>

  <div class="spacer"></div>
  
  <div class="row block">
    <h3 class="twelve columns">La base</h3>
    <div class="three mobile-one columns">
      {{ form_row(form.type)}}
    </div>
    <div class="three mobile-one columns">
      {{ form_row(form.number) }}
    </div>
    <div class="three mobile-one columns">
      {{ form_row(form.name)}}
    </div>
    <div class="three mobile-one columns">
      {{ form_row(form.sex)}}
    </div>
    <div class="twelve columns">
      {{ form_row(form.concept)}}
    </div>
  </div>

  <div class="spacer"></div>
  
  <div class="row block">
    <h3 class="twelve columns">Les détails</h3>
    <div class="three mobile-one columns">
      {{ form_row(form.age) }}
    </div>
    <div class="three mobile-one columns">
      {{ form_row(form.level) }}
    </div>
    <div class="three mobile-one columns">
      {{ form_row(form.job)}}
    </div>
    <div class="three mobile-one columns">
      {{ form_row(form.income)}}
    </div>
    <div class="twelve columns">
      {{ form_row(form.description)}}
    </div>
    <div class="five mobile-two columns">
      {{ form_row(form.skills)}}
    </div>
    <div class="six mobile-two columns">
      {{ form_row(form.costume)}}
    </div>
  </div>

  <div class="spacer"></div>

   <div class="row block">
    <h3 class="twelve columns">Les relations</h3>
    <div class="five mobile-two columns">
      {{ form_row(form.groupes) }}
    </div>
    <div class="five mobile-two columns">
      {{ form_row(form.intrigues) }}
    </div>
  </div>

  <div class="spacer"></div>

  <div class="row block">
    <h3 class="twelve columns">Chronologie</h3>
    <div class="twelve columns">
      {{ form_row(form.events)}}
    </div>
  </div>
  {{ form_row(form._token) }}
  <input class="button green" type="submit" value="Créer"/>
</form>

{% endblock %}
