{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Création de personnage{% endblock %}

{% block body %}

<h1>Créer un nouveau personnage</h1>

<form method="post" {{ form_enctype(form) }}>
	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">La technique</h3>
				</div>
				<div class="row">
					<div class="small-12 medium-6 columns">
						{{ form_row(form.writer)}}
					</div>
					<div class="small-12 medium-6 columns">
						{{ form_row(form.status) }}
					</div>
				</div>
			</div>
		</div>
	</div>
	
	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">La base</h3>
				</div>
				<div class="row">
					<div class="small-6 medium-3 columns">
						{{ form_row(form.type)}}
					</div>
					<div class="small-6 medium-3 columns">
						{{ form_row(form.number) }}
					</div>
					<div class="small-6 medium-3 columns">
						{{ form_row(form.name)}}
					</div>
					<div class="small-6 medium-3 columns">
						{{ form_row(form.sex)}}
					</div>
					<div class="small-12 columns">
						{{ form_row(form.concept)}}
					</div>
				</div>
			</div>
		</div>
	</div>
	
	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">Les détails</h3>
				</div>
				<div class="row">
					<div class="small-6 medium-3 columns">
						{{ form_row(form.age) }}
					</div>
					<div class="small-6 medium-3 columns">
						{{ form_row(form.level) }}
					</div>
					<div class="small-6 medium-3 columns">
						{{ form_row(form.job)}}
					</div>
					<div class="small-6 medium-3 columns">
						{{ form_row(form.income)}}
					</div>
					<div class="small-12 columns">
						{{ form_row(form.description)}}
					</div>
					<div class="small-12 medium-6 columns">
						{{ form_row(form.skills)}}
					</div>
					<div class="small-12 medium-6 columns">
						{{ form_row(form.costume)}}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">Les relations</h3>
				</div>
				<div class="row">
					<div class="small-12 medium-6 columns">
						{{ form_row(form.groupes) }}
					</div>
					<div class="small-12 medium-6 columns">
						{{ form_row(form.intrigues) }}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">La chronologie</h3>
				</div>
				<div class="row">
					<div class="small-12 columns">
						{{ form_row(form.events)}}
					</div>
				</div>
			</div>
		</div>
	</div>

	{{ form_row(form._token) }}
	<input class="button green" type="submit" value="Créer"/>
</form>

{% endblock %}
