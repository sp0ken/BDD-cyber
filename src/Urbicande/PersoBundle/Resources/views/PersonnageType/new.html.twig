{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Création d'un type de personnage{% endblock %}

{% block body %}

<h1>Créer un nouveau type de personnage</h1>

<form action="{{ path('create_perso_type') }}" method="post" {{ form_enctype(form) }}>
  <div class="row block">
    <h3 class="twelve columns">La base</h3>
    <div class="twelve columns">
      {{ form_row(form.name)}}
    </div>
    <div class="twelve columns">
      {{ form_row(form.description) }}
    </div>
  </div>

    {{ form_row(form._token) }}
  <input class="button green" type="submit" value="Créer"/>
</form>

{% endblock %}
