{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - {{ type.name}} {% endblock %}

{% block body %}

<div class="row page-header">
	<h1 class="small-6 medium-9 columns">
		{{ type.name }}
	</h1>
	<div class="small-6 medium-3 columns">
		<a class="button flat green"  href="{{ path('perso_type_edit', {'id': type.id}) }}">Modifier</a>
	</div>
</div>

<!-- Description -->
<div class="row">
	<div class="small-12 columns">
		<div id="description" class="card">
			<div class="header row">
				<h3 class="small-6 medium-8 columns">
					Description
				</h3>
			</div>
			{% autoescape false %}
				<div>{{type.description}}</div>
			{% endautoescape %}
		</div>
	</div>
</div>

<div class="row">
	<div class="small-12 columns">
		<div id="description" class="card">
			<div class="header row">
				<h3 class="small-12 columns">Liste des personnages <small>({{type.players|length}} personnages)</small></h3>
			</div>
			<table class="records_list datatable">
				<thead>
					<tr>
						<th>Numero</th>
						<th>Nom</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
				{% for perso in type.players %}
					<tr>
						<td>{{ perso.number }}</td>
						<td><a title="Voir" href="{{ path('perso_by_id', { 'id': perso.id }) }}">{{ perso.name }}</a></td>
						<td>
							<ul class="button-group">
								<li><a class="button flat gray" title="Voir" href="{{ path('perso_by_id', { 'id': perso.id }) }}"><i class="fa fa-eye"></i></a></li>
								<li><a class="button flat green" href="{{ path('perso_edit', { 'id': perso.id}) }}"><i class="fa fa-edit"></i></a></li>
							</ul>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
{% endblock body %}