{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Edition de {{back.title}} {% endblock %}

{% block body %}

<h1>Edition de "{{back.title}}" <small>(revenir à la version du : 
	 <form id="revert" action="{{ path('background_revert', { 'id': back.id }) }}" method="post" {{ form_enctype(form) }}>
		<select name="version">
			{% for log in logs %}
					<option value="{{log.version}}">{{log.loggedAt.date|date("d/m/Y H:i")}}</option>}
			{% endfor %}
		</select>
		 <input class="button flat green" type="submit" name="revert" value="Restaurer">
		 )
	</form>
</small></h1>

<form action="{{path('background_update', {'id': back.id}) }}" method="post" {{ form_enctype(form) }}>
	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">La base</h3>
				</div>
				<div class="row">
					<div class="small-12 medium-6 columns">
						{{ form_row(form.writer)}}
					</div>
					<div class="small-12 medium-6 columns">
						{{ form_row(form.title) }}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">Les détails</h3>
				</div>
				<div class="row">
					<div class="twelve columns">
						{{ form_row(form.body) }}
					</div>
				</div>
			</div>
		</div>
	</div>

	{{ form_row(form._token) }}
	<input class="button flat green" type="submit" value="Éditer"/>
</form>

{% endblock %}
