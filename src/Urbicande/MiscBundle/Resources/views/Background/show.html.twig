{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Background {% endblock %}

{% block body %}

<div class="row">
  <h1 class="nine columns">
    {{back}}
  </h1>
  <div class="three hide-for-small columns">
    <ul class="button-group even two-up">
        <li>
            <div class="button gray large-header">
              <a href="{{ path('background_edit', {'id': back.id}) }}">Modifier</a>
            </div>
        </li>
        <li>
            <div class="button green large-header">
              <a href="{{ path('download_background', {'id': back.id}) }}">Télécharger</a>
            </div>
        </li>
  </div>
</div>

<div class="spacer"></div>

<div class="row">
  {% autoescape false %}
    <div class="twelve columns">{{back.body}}</div>
  {% endautoescape %}
</div>

{% endblock body %}