{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Musiques {% endblock %}

{% block body %}

<div class="row">
  <h1 class="nine columns">
    Les musiques
  </h1>
  <div class="three hide-for-small columns">
    <div class="button gray large-header">
      <a href="{{ path('create_musique') }}">Créer une musique</a>
    </div>
  </div>
</div>

<div class="spacer"></div>

<table class="records_list datatable">
  <thead>
    <tr>
      <th>Numéro</th>
      <th>Nom</th>
      <th>Type</th>
      <th>Lien</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for musique in musiques %}
      <tr>
        <td><a title="Voir" href="{{ path('musique_by_id', { 'id': musique.id }) }}">{{ musique.number }}</a></td>
        <td><a title="Voir" href="{{ path('musique_by_id', { 'id': musique.id }) }}">{{ musique.name }}</a></td>
        <td>{{ musique.type }}</td>
        <td>{{ musique.link }}</td>
        <td>
          <ul class="button-group even two-up">
            <li>
              <div class="button green">
                <a title="Éditer" href="{{ path('musique_edit', { 'id': musique.id }) }}"><i class="icon-pencil"></i></a>
              </div>
            </li>
            <li>
              <div class="button red">
                <a title="Supprimer" href="{{ path('musique_delete', { 'id': musique.id }) }}"><i class="icon-remove-sign"></i></a>
              </div>
            </li>
          </ul>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock body %}
