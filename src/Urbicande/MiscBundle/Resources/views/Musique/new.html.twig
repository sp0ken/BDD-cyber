{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Nouvelle musique {% endblock %}

{% block body %}

<h1>Créer une nouvelle musique</h1>

<form method="post" {{ form_enctype(form) }}>
	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">La base</h3>
				</div>
				<div class="row">
					<div class="small-12 medium-4 columns">
						{{ form_row(form.number)}}
					</div>
					<div class="small-12 medium-4 columns">
						{{ form_row(form.name) }}
					</div>
					<div class="small-12 medium-4 columns">
						{{ form_row(form.type) }}
					</div>
				</div>
			</div>
		</div>
	</div>
	
	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">Les détails</h3>
				</div>
				<div class="row">
					<div class="small-12 medium-6 columns">
						{{ form_row(form.description) }}
					</div>
					 <div class="small-12 medium-6 columns">
						{{ form_row(form.tde) }}
					</div>
					 <div class="small-12 columns">
						{{ form_row(form.link) }}
					</div>
				</div>
			</div>
		</div>
	</div>

	{{ form_row(form._token) }}
	<button class="button green" type="submit"><i class="fa fa-plus"></i> Créer</button>
</form>

{% endblock %}
