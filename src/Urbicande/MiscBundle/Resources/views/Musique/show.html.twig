{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - {{musique.name}} {% endblock %}

{% block body %}

<div class="row page-header">
	<h1 class="small-6 medium-9 columns">
		Musique {{ musique }}
	</h1>
	<div class="small-6 medium-3 columns">
		<a class="button flat green" href="{{ path('musique_edit', {'id': musique.id}) }}">Modifier</a>
	</div>
</div>

<div class="row">
	<div class="small-12 columns">
		<b>Ambiance</b> : {{musique.type}}</a><br>
		<b>Lien</b> : <a href="{{musique.link}}" title="">{{musique.link}}</a>
	</div>
</div>

<!-- Description -->
<div class="row">
	<div class="small-12 columns">
		<div id="description" class="card">
			<div class="header row">
				<h3 class="small-6 medium-8 columns">Description</h3>
			</div>
			{% autoescape false %}
				<div>{{musique.description}}</div>
			{% endautoescape %}
		</div>
	</div>
</div>

<!-- TDE -->
<div class="row">
	<div class="small-12 columns">
		<div id="TDE" class="card">
			<div class="header row">
				<h3 class="small-6 medium-8 columns">TDE</h3>
			</div>
			{% autoescape false %}
				<div>{{musique.tde}}</div>
			{% endautoescape %}
		</div>
	</div>
</div>

{% endblock body %}