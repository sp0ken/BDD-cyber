{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Paramètres{% endblock %}

{% block body %}

<h1>Paramètres</h1>

<form action="{{ path('user_update', {'id': user.id}) }}" method="post" {{ form_enctype(form) }}>
	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">La base</h3>
				</div>
				<div class="row">
					<div class="small-12 medium-6 columns">
						{{ form_row(form.username) }}
					</div>
					<div class="small-12 medium-6 columns">
						{{ form_row(form.email) }}
					</div>
					<div class="small-12 columns">
						{{ form_row(form.plainPassword) }}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">Les paramètres additionnels</h3>
				</div>
				<div class="row">
					<div class="small-12 columns">
						{{ form_widget(form.setting.hasNotification, { 'attr': {'class': 'left'} }) }}
						{{ form_label(form.setting.hasNotification) }}
					</div>
					<div class="small-12 columns">
						{{ form_widget(form.setting.hasRpg, { 'attr': {'class': 'left'} }) }}
						{{ form_label(form.setting.hasRpg) }}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">L'avatar</h3>
				</div>
				<div class="row">
					{% for i in  1..16 %}
						 <div class="small-6 medium-4 large-3 xlarge-2 columns">
							<label for="avatar{{i}}"><img src="{{asset('bundles/urbicanderpg/images/portraits/avatar' ~ i ~ '.jpg')}}"></label>
							<input type="radio" name="avatar" id="avatar{{i}}" value="avatar{{i}}">
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>

	{{ form_row(form._token) }}
	<input class="button flat green" type="submit" value="Valider"/>
</form>

{% endblock %}
