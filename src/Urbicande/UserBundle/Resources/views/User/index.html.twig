{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Scénaristes {% endblock %}

{% block body %}

<div class="row page-header">
	<h1 class="small-12 columns">
		Les scénaristes
	</h1>
</div>

<table class="records_list datatable">
	<thead>
		<tr>
			<th>Nom</th>
			<th>Niveau</th>
			<th>Titre</th>
			<th>Nombre d'intrigues</th>
			<th>Nombre de personnages</th>
			<th>Nombre de groupes</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for user in users %}
			<tr>
				<td><a title="Voir" href="{{ path('user_by_name', { 'username': user.username }) }}">{{ user }}</a></td>
				<td>{{ user.stat.level }}</td>
				<td>{{ user.stat.title }}</td>
				<td>{{ user.intrigues|length }}</td>
				<td>{{ user.persos|length }}</td>
				<td>{{ user.groupes|length }}</td>
				<td>
					<button href="#" data-dropdown="drop-actions-{{user.id}}" aria-controls="drop-actions-{{user.id}}" aria-expanded="false" class="button dropdown orange">Actions</button><br>
					<ul id="drop-actions-{{user.id}}" data-dropdown-content class="f-dropdown" aria-hidden="true">
						<li><a class="gray-font" title="Détails" href="{{ path('user_by_name', { 'username': user.username }) }}"><i class="fa fa-eye"></i> Détails</a></li>
					</ul>
			</tr>
		{% endfor %}
	</tbody>
</table>

{% endblock body %}
