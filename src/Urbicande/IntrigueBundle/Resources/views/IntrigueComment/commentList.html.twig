<div class="comments">
  {% for comment in intrigue.comments %}
      {% if loop.index%2 %}
      <div class="comment-box">
        <div class="row">
          <div class="left">
            Par <b>{{comment.user}}</b> le {{comment.createdAt|date('d M Y')}} :
          </div>
          <div class="left" style="margin-left:10px;">
            {% if(app.user == comment.user) %}
              <a class="green" href="{{ path('intrigue_comment_edit', {'id': comment.id}) }}"><i class="icon-edit"></i></a>
              <a class="red" href="{{ path('intrigue_comment_delete', {'id': comment.id}) }}"><i class="icon-remove-sign"></i></a>
            {% endif %}
          </div>
        </div>
        <div class="row">
          {% autoescape false %}
            <div class="seven columns comment {% if comment.user == intrigue.writer %}author{% endif %}">{{ comment.comment}}</div>
          {% endautoescape %}
        </div>
      </div>
      {% else %}
        <div class="comment-box">
          <div class="row">
            <div class="right" style="margin-left:10px;">
              Par <b>{{comment.user}}</b> le {{comment.createdAt|date('d M Y')}} :
            </div>
            <div class="right">
              {% if(app.user == comment.user) %}
                <a class="green" href="{{ path('intrigue_comment_edit', {'id': comment.id}) }}"><i class="icon-edit"></i></a>
                <a class="red" href="{{ path('intrigue_comment_delete', {'id': comment.id}) }}"><i class="icon-remove-sign"></i></a>
              {% endif %}
            </div>
          </div>
          <div class="row">
            {% autoescape false %}
              <div class="push-five seven columns comment {% if comment.user == intrigue.writer %}author{% endif %}">{{ comment.comment}}</div>
            {% endautoescape %}
          </div>
        </div>
      {% endif %}
  {% endfor %}
  <div class="spacer"></div>
</div>