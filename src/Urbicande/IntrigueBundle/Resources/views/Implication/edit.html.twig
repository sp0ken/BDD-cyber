{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Édition d'une implication {% endblock %}

{% block body %}

<h1>Éditer {{implication.__toString}} pour {{implication.intrigue}} <small>(revenir à la version du : 
	 <form id="revert" action="{{ path('implication_revert', { 'id': implication.id }) }}" method="post" {{ form_enctype(form) }}>
		<select name="version">
			{% for log in logs %}
					<option value="{{log.version}}">{{log.loggedAt.date|date("d/m/Y H:i")}}</option>}
			{% endfor %}
		</select>
		 <input class="button green" type="submit" name="revert" value="Appliquer">
		 )
	</form>
</small></h1>

<form action="{{ path('implication_update', { 'id': implication.id }) }}" method="post" {{ form_enctype(form) }}>
	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">La base</h3>
				</div>
				<div class="row">
					<div class="small-6 columns">
						{{ form_row(form.player)}}
					</div>
					<div class="small-6 columns">
						{{ form_row(form.groupe) }}
					</div>
					<div class="small-6 columns">
						{{ form_row(form.degree)}}
					</div>
					<div class="small-6 columns">
						{{ form_row(form.theme) }}
					</div>
					<div class="small-12 columns">
						{{ form_row(form.synopsis) }}
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">Les détails</h3>
				</div>
				<div class="row">
					<div class="small-12 columns">
							{{form_row(form.description)}}
					</div>
					<div class="small-12 columns">
							{{form_row(form.information)}}
					</div>
					<div class="small-12 columns">
							{{form_row(form.objective)}}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div style="display:none">
		{{ form_rest(form) }}
	</div>
	<input class="button green" type="submit" value="Éditer"/>
</form>

{% endblock %}
