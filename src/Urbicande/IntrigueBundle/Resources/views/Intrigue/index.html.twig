{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Intrigues {% endblock %}

{% block body %}

<div class="row">
  <h1 class="nine columns">
    Les intrigues
  </h1>
  <div class="three hide-for-small columns">
    <div class="button gray large-header">
      <a href="{{ path('create_intrigue') }}">Créer une intrigue</a>
    </div>
  </div>
</div>

<div class="spacer"></div>

<table class="records_list datatable">
  <thead>
    <tr>
      <th>Type</th>
      <th>Numéro</th>
      <th>Nom</th>
      <th>Nombre d'implications</th>
      <th>Statut</th>
      <th>Scénariste</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for intrigue in intrigues %}
      <tr>
        <td><a title="Voir" href="{{ path('intrigue_type_by_id', { 'id': intrigue.type.id }) }}">{{ intrigue.type }}</a></td>
        <td>{{ intrigue.number }}</td>
        <td><a title="Voir" href="{{ path('intrigue_by_id', { 'id': intrigue.id }) }}">{{ intrigue.name }}</a></td>
        <td>{{ intrigue.implications|length }}</td>
        <td>{{ intrigue.fullStatus }}</td>
        <td><a title="Voir" href="{{ path('user_by_name', { 'username': intrigue.writer.username }) }}">{{ intrigue.writer }}</a></td>
        <td>
          <ul class="button-group even two-up">
            <li>
              <div class="button green">
                <a title="Éditer" href="{{ path('intrigue_edit', { 'id': intrigue.id }) }}"><i class="icon-pencil"></i></a>
              </div>
            </li>
            <li>
              <div class="button red">
                <a title="Supprimer" href="{{ path('intrigue_delete', { 'id': intrigue.id }) }}"><i class="icon-remove-sign"></i></a>
              </div>
            </li>
          </ul>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock body %}
