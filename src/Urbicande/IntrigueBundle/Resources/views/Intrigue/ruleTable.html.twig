<table class="records_list datatable">
	<thead>
		<tr>
			<th>Numéro</th>
			<th>Nom</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for rule in intrigue.rules %}
			<tr>
				<td>{{rule.number}}</td>
				<td><a title="Voir" href="{{ path('rule_by_id', { 'id': rule.id }) }}">{{rule.name}}</a></td>
				<td>
					<button href="#" data-dropdown="drop-actions-rule-{{rule.id}}" aria-controls="drop-actions-rule-{{rule.id}}" aria-expanded="false" class="button dropdown orange">Actions</button><br>
					<ul id="drop-actions-rule-{{rule.id}}" data-dropdown-content class="f-dropdown" aria-hidden="true">
						<li><a class="green-font" title="Éditer" href="{{ path('rule_edit', { 'id': rule.id }) }}"><i class="fa fa-edit"></i> Éditer</a></li>
						<li><a class="red-font" title="Supprimer" href="{{ path('rule_delete', { 'id': rule.id }) }}"><i class="fa fa-times-circle"></i> Supprimer</a></li>
					</ul>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>