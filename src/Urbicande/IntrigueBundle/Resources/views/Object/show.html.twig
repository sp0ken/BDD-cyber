{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - {{ object.name}} {% endblock %}

{% block body %}

<div class="row">
  <h1 class="ten columns">
    {{ object }}
  </h1>
  <div class="two hide-for-small columns">
    <div class="button gray large-header">
      <a href="{{ path('object_edit', {'id': object.id}) }}">Modifier</a>
    </div>
  </div>
</div>
<div class="row">
  <div class="four mobile-one columns">
    <b>Référent</b> : {{object.creator}}<br>
  </div>
  <div class="eight mobile-three columns">
    <b>Position en début de jeu</b> : {{object.origin}}
  </div>
</div>

<div class="spacer"></div>

<div class="row">
  {% autoescape false %}
    <h3 class="twelve columns">Description</h3>
    <div class="twelve columns">{{object.description}}</div>
  {% endautoescape %}
</div>

<div class="spacer"></div>

<div class="row">
  <h3 class="twelve columns">Liste des données contenues <small>({{object.datas|length}} données)</small></h3>
  <table class="records_list datatable">
    <thead>
      <tr>
        <th>Numero</th>
        <th>Information</th>
        <th>Intrigue</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    {% for data in object.datas %}
      <tr>
        <td>{{ data.number }}</td>
        <td>{{ data.information }}</td>
        <td><a href="{path('intrigue_by_id', {'id': data.plot.intrigue})}}">{{ data.plot.intrigue }}</a></td>
        <td>
          <ul class="button-group even three-up">
            <li>
              <div class="button gray">
                <a title="Voir" href="{{ path('data_by_id', { 'id': data.id }) }}"><i class="icon-eye-open"></i></a>
              </div>
            </li>
            <li>
              <div class="button green">
                <a title="Éditer" href="{{ path('data_edit', { 'id': data.id}) }}"><i class="icon-pencil"></i></a>
              </div>
            </li>
            <li>
              <div class="button red">
                <a title="Enlever" href="{{ path('data_remove_document', { 'dataId': data.id, 'documentId': object.id}) }}"><i class="icon-minus-sign"></i></a>
              </div>
            </li>
          </ul>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>
{% endblock body %}