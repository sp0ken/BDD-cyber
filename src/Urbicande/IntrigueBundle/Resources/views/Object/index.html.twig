{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Objets {% endblock %}

{% block body %}

<div class="row">
  <h1 class="ten mobile-three columns">
    Les objets
  </h1>
  <div class="two mobile-one columns">
    <div class="button gray large-header">
      <a href="{{ path('create_object') }}">Créer un objet</a>
    </div>
  </div>
</div>

<div class="spacer"></div>

<table class="records_list datatable">
  <thead>
    <tr>
      <th>Type</th>
      <th>Nom</th>
      <th>Position de départ</th>
      <th>Référent</th>
      <th>Nombre de données</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for object in objects %}
      <tr>
        <td><a title="Voir" href="{{ path('object_type_by_id', { 'id': object.type.id }) }}">{{ object.type }}</a></td>
        <td><a title="Voir" href="{{ path('object_by_id', { 'id': object.id }) }}">{{ object.name }}</a></td>
        <td>{{ object.origin }}</td>
        <td>{{ object.creator }}</td>
        <td>{{ object.datas|length }}</td>
        <td>
          <ul class="button-group even two-up">
            <li>
              <div class="button green">
                <a title="Éditer" href="{{ path('object_edit', { 'id': object.id }) }}"><i class="icon-pencil"></i></a>
              </div>
            </li>
            <li>
              <div class="button red">
                <a title="Supprimer" href="{{ path('object_delete', { 'id': object.id }) }}"><i class="icon-remove-sign"></i></a>
              </div>
            </li>
          </ul>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock body %}
