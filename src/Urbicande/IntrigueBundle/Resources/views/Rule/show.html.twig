{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Règle {% endblock %}

{% block body %}

<div class="row">
  <h1 class="nine columns">
    {{rule}}
  </h1>
  <div class="three hide-for-small columns">
    <ul class="button-group even two-up">
      <li>
        <div class="button gray large-header">
          <a href="{{ path('rule_edit', {'id': rule.id}) }}">Modifier</a>
        </div>
      </li>
      <li>
        <div class="button green large-header">
          <a href="{{ path('download_rule', {'id': rule.id}) }}">Télécharger</a>
        </div>
      </li>
    </ul>
  </div>
</div>

<div class="spacer"></div>

<div class="row">
  {% autoescape false %}
    <h3 class="twelve colums">Description</h3>
    <div class="twelve columns">{{rule.description}}</div>
  {% endautoescape %}
</div>

{% endblock body %}