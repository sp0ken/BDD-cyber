{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Règles {% endblock %}

{% block body %}

<div class="row page-header">
	<h1 class="small-12 medium-8 columns">
		Les règles
	</h1>
	<div class="medium-4 hide-for-small columns">
		<a class="button blue flat" href="{{ path('create_rule') }}">Créer une règle</a>
	</div>
</div>

<table class="records_list datatable">
	<thead>
		<tr>
			<th>Numéro</th>
			<th>Nom</th>
			<th>Référent</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		{% for rule in rules %}
			<tr>
				<td>{{ rule.number }}</td>
				<td><a title="Voir" href="{{ path('rule_by_id', { 'id': rule.id }) }}">{{ rule.name }}</a></td>
				<td><a title="Voir" href="{{ path('user_by_name', { 'username': rule.writer.username }) }}">{{ rule.writer }}</a></td>
				<td>
					<ul class="button-group">
						<li><a class="button flat green" title="Éditer" href="{{ path('rule_edit', { 'id': rule.id }) }}"><i class="fa fa-edit"></i></a></li>
						<li><a class="button flat red" title="Supprimer" href="{{ path('rule_delete', { 'id': rule.id }) }}"><i class="fa fa-times-circle"></i></a></li>
					</ul>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>

{% endblock body %}
