{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Édition d'une règle {% endblock %}

{% block body %}

<h1>Éditer la règle "{{rule.name}}"</h1>

<form action="{{path('rule_update', {'id': rule.id}) }}" method="post" {{ form_enctype(form) }}>
	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">La base</h3>
				</div>
				<div class="row">
					<div class="small-12 medium-4 columns">
						{{ form_row(form.writer)}}
					</div>
					<div class="small-12 medium-4 columns">
						{{ form_row(form.number) }}
					</div>
					<div class="small-12 medium-4 columns">
						{{ form_row(form.name) }}
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">Les détails</h3>
				</div>
				<div class="row">
					<div class="small-12 columns">
						{{ form_row(form.description) }}
					</div>
				</div>
			</div>
		</div>
	</div>
	{{ form_row(form._token) }}
	<button class="button flat green" type="submit"><i class="fa fa-save"></i> Éditer</button>
</form>

<form id="revert" action="{{ path('rule_revert', { 'id': rule.id }) }}" method="post" {{ form_enctype(form) }}>
	<!-- Historique -->
	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">Historique</h3>
				</div>
				<div class="row">
					<div class="small-12 columns">
						Revenir à la version du :
						<select name="version">
							{% for log in logs %}
									<option value="{{log.version}}">{{log.loggedAt.date|date("d/m/Y H:i")}}</option>}
							{% endfor %}
						</select>
					</div>
				</div>
			</div>
		</div>
	</div>
 	<button class="button flat gray" type="submit"><i class="fa fa-history"></i> Restaurer</button>
</form>

{% endblock %}
