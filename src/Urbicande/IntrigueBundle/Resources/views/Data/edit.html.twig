{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Édition d'une donnée {% endblock %}

{% block body %}

<h1>Éditer une donnée <small>(revenir à la version du : 
	 <form id="revert" action="{{ path('data_revert', { 'id': data.id }) }}" method="post" {{ form_enctype(form) }}>
		<select name="version">
			{% for log in logs %}
					<option value="{{log.version}}">{{log.loggedAt.date|date("d/m/Y H:i")}}</option>}
			{% endfor %}
		</select>
		 <input class="button green" type="submit" name="revert" value="Appliquer">
		 )
	</form>
</small></h1>

<form action="{{ path('data_update', { 'id': data.id }) }}" method="post" {{ form_enctype(form) }}>
	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">La base</h3>
				</div>
				<div class="row">
					<div class="small-12 medium-3 large-2 columns">
						{{ form_row(form.number)}}
					</div>
					<div class="small-12 medium-9 large-10 columns">
						{{ form_row(form.information) }}
					</div>
				</div>
			</div>
		</div>
	</div>
	
	<div class="row">
		<div class="small-12 columns">
			<div class="card">
				<div class="header row">
					<h3 class="small-12 columns">Les détails</h3>
				</div>
				<div class="row">
					<div class="small-12 medium-6 columns">
							{{form_row(form.knowers)}}
					</div>
					<div class="small-12 medium-6 columns">
							{{form_row(form.documents)}}
					</div>
				</div>
			</div>
		</div>
	</div>

	<div style="display:none">
		{{ form_rest(form) }}
	</div>
	<input class="button flat green" type="submit" value="Éditer"/>
</form>

{% endblock %}
