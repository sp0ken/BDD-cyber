{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Édition d'une donnée {% endblock %}

{% block body %}

<h1>Éditer une donnée</h1>

<form action="{{ path('data_update', { 'id': data.id }) }}" method="post" {{ form_enctype(form) }}>
  <div class="row block">
    <h3 class="twelve columns">La base</h3>
    <div class="four mobile-one columns">
      {{ form_row(form.number)}}
    </div>
    <div class="eight mobile-one columns">
      {{ form_row(form.information) }}
    </div>
  </div>

  <div class="spacer"></div>
  
  <div class="row block">
    <h3 class="twelve columns">Les détails</h3>
    <div class="five columns">
        {{form_row(form.knowers)}}
    </div>
    <div class="five columns">
        {{form_row(form.documents)}}
    </div>
  </div>

  <div style="display:none">
    {{ form_rest(form) }}
  </div>
  <input class="button green" type="submit" value="Éditer"/>
</form>

{% endblock %}
