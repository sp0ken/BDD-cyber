{% extends '::base.html.twig' %}

{% block title %} {{ parent() }} - Données {% endblock %}

{% block body %}

<div class="row">
  <h1 class="ten columns">
    Les données
  </h1>
</div>

<table class="records_list datatable">
  <thead>
    <tr>
      <th>Numéro</th>
      <th>Informations</th>
      <th>Intrigue</th>
      <th>Joueurs informés</th>
      <th>Documents concernés</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for data in datas %}
      <tr>
        <td>{{data.number}}</td>
        <td><a href="{{path('data_by_id', {'id': data.id})}}">{{data.information}}</a></td>
        <td>
        <td><a href="{{path('intrigue_by_id', {'id': data.plot.intrigue.id})}}">{{data.plot.intrigue}}</a></td>
          {% for perso in data.knowers %}
            <a href="{{path('perso_by_id', {'id': perso.id}) }}">{{perso.name}}</a>/
          {% endfor %}
        </td>
        <td>
          {% for document in data.documents %}
            <a href="{{path('object_by_id', {'id': document.id}) }}">{{document.name}}</a>
          {% endfor %}
        </td>
        <td>
          <ul class="button-group even two-up">
            <li>
              <div class="button green">
                <a title="Éditer" href="{{ path('data_edit', { 'id': data.id }) }}"><i class="icon-pencil"></i></a>
              </div>
            </li>
            <li>
              <div class="button red">
                <a title="Supprimer" href="{{ path('data_delete', { 'id': data.id }) }}"><i class="icon-remove-sign"></i></a>
              </div>
            </li>
          </ul>
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock body %}
